{
  "name": "mlathrom/craft-remix",
  "description": "A Craft CMS plugin. The Remix field outputs the transformed value of your title or slug based on rules you define.",
  "type": "craft-plugin",
  "license": "proprietary",
  "support": {
    "email": "matt@mlathrom.com"
  },
  "require": {
    "php": ">=8.2",
    "craftcms/cms": "^5.0.0"
  },
  "require-dev": {
    "craftcms/ecs": "dev-main",
    "craftcms/phpstan": "dev-main"
  },
  "autoload": {
    "psr-4": {
      "mlathrom\\craftremix\\": "src/"
    }
  },
  "extra": {
    "handle": "remix",
    "name": "Remix",
    "developer": "Matt Lathrom",
    "documentationUrl": "https://github.com/mlathrom/craft-remix"
  },
  "scripts": {
    "check-cs": "ecs check --ansi",
    "fix-cs": "ecs check --ansi --fix",
    "phpstan": "phpstan --memory-limit=1G"
  },
  "config": {
    "sort-packages": true,
    "platform": {
      "php": "8.2"
    },
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "craftcms/plugin-installer": true
    }
  }
}
